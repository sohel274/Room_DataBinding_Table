<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/lbl_add"
                android:padding="10dp"
                android:layout_gravity="right"
                android:id="@+id/tvAddBill"
                android:layout_height="wrap_content" />



            <EditText
                android:layout_width="match_parent"
                android:id="@+id/etBillNumber"
                android:enabled="false"
                android:editable="false"
                android:hint="Bill Number"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/etCustomerName"
                android:hint="Please Enter Customer Name"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/etMobile"
                android:hint="Please Enter Customer Moile"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">



                <Spinner
                    android:layout_width="wrap_content"
                    android:id="@+id/spProduct"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tvProductPrice"
                    android:layout_height="wrap_content" />


                <EditText
                    android:layout_width="100dp"
                    android:padding="5dp"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:id="@+id/etQuantity"
                    android:layout_height="wrap_content" />





            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvTotalPrice"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:text="@string/lbl_add"
                android:padding="10dp"
                android:id="@+id/tvAddProduct"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv"
                android:layout_height="wrap_content"/>




        </LinearLayout>


    </ScrollView>





</LinearLayout>